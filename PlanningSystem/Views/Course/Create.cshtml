@model PlanningSystem.Models.Course
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Course"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.courseName)
        @Html.TextBoxFor(m => m.courseName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.courseCode)
        @Html.TextBoxFor(m => m.courseCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.description)
        @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.lectures)
        @Html.TextBoxFor(m => m.lectures, new { @class = "form-control" })
    </div>
    <div class="form-group">
        
        <select asp-for="Naam" asp-items="accounts.name">
            <option value="">Kies een docent</option>
            <option value=ViewData[ListItems]></option>
            
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
}

