@model PlanningSystem.Models.Course
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("EditCourse", "Course"))
{
    <div class="form-group">
        @Html.HiddenFor(m => m.courseId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.courseName)
        @Html.TextBoxFor(m => m.courseName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.courseCode)
        @Html.TextBoxFor(m => m.courseCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.description)
        @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.account.name)
        @Html.DropDownList("Account", (IEnumerable<SelectListItem>)ViewData["ListItems"], new {multiple = "multiple"})
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
}