@using PlanningSystem.Models

@model List<PlanningSystem.Models.Account>
@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 text-center">
        <h2 class="pull-left">Accounts</h2>
    </div>
    <div class="col-md-6 text-center">
        <span class="pull-right">
            @Html.ActionLink("Toevoegen", "Create", "Account", new { @class= "btn btn-success" })
        </span>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">User ID</th>
            <th scope="col">Gebruikersnaam</th>
            <th scope="col">Volledige naam</th>
            <th scope="col">Rol</th>
            <th scope="col">Gecreeerd op</th>
            <th scope="col">Manage</th>

        </tr>
    </thead>
    @foreach (var i in Model)
    {
        <tbody>
            <tr>
                <th>@i.userId</th>
                <td>@i.username</td>
                <td>@i.name</td>
                <td>@i.role.roleName</td>
                <td>@i.createdAt</td>

                <td>
                    @Html.ActionLink("Wijzigen", "Edit", "Account", new { @class = "btn btn-primary" })
                    <button type="button" class="btn btn-danger">Verwijderen</button>
                </td>
            </tr>
        </tbody>
    }
</table>